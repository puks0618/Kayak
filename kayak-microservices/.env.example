# ========================================
# AWS RDS MySQL Configuration
# ========================================
# SECURITY: Get credentials from AWS Secrets Manager
# Run: aws secretsmanager get-secret-value --secret-id kayak/rds/credentials-dev --query SecretString --output text
# Or use terraform output: terraform output rds_address
MYSQL_HOST=<get-from-terraform-output-rds_address>
MYSQL_PORT=3306
MYSQL_USER=<get-from-secrets-manager>
MYSQL_PASSWORD=<get-from-secrets-manager>
MYSQL_SSL=true
MYSQL_CONNECTION_LIMIT=10
MYSQL_CONNECT_TIMEOUT=10000

# Optional: Use IAM authentication instead of password
# USE_IAM_AUTH=true

# Service-specific MySQL databases
MYSQL_DATABASE_AUTH=kayak_auth
MYSQL_DATABASE_USERS=kayak_users
MYSQL_DATABASE_LISTINGS=kayak_listings
MYSQL_DATABASE_BOOKINGS=kayak_bookings

# ========================================
# AWS DocumentDB (MongoDB) Configuration
# ========================================
# SECURITY: Get credentials from AWS Secrets Manager
# Run: aws secretsmanager get-secret-value --secret-id kayak/docdb/credentials-dev --query SecretString --output text
# Or use terraform output: terraform output docdb_endpoint
MONGODB_HOST=<get-from-terraform-output-docdb_endpoint>
MONGODB_PORT=27017
MONGODB_USER=<get-from-secrets-manager>
MONGODB_PASSWORD=<get-from-secrets-manager>
MONGODB_SSL=true
MONGODB_SSL_VALIDATE=false

# Service-specific MongoDB databases
MONGODB_DATABASE_LISTINGS=kayak_listings
MONGODB_DATABASE_ANALYTICS=kayak_analytics
MONGODB_DATABASE_LOGS=kayak_logs

# ========================================
# Redis Configuration (for caching)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# Kafka Configuration
# ========================================
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=kayak-microservices

# ========================================
# Service Ports
# ========================================
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
LISTING_SERVICE_PORT=3003
BOOKING_SERVICE_PORT=3004
SEARCH_SERVICE_PORT=3005
ANALYTICS_SERVICE_PORT=3006
ADMIN_SERVICE_PORT=3007
API_GATEWAY_PORT=3000

# ========================================
# JWT Configuration
# ========================================
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# ========================================
# Environment
# ========================================
NODE_ENV=development
LOG_LEVEL=debug
